{
	"compilerOptions": {
		"target": "ESNEXT",
		"module": "ESNext",
		"noEmit": true,
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": [
			"./node_modules/@types",
		],
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@commands/*": [
				"./src/commands/*"
			],
			"@database/*": [
				"./src/database/*"
			],
			"@events/*": [
				"./src/events/*"
			],
		}
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		".build"
	]
}